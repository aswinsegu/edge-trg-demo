<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OAuthV2 async="false" continueOnError="false" enabled="true" name="OA-GeneratePasswordToken">
    <DisplayName>OA-GeneratePasswordToken</DisplayName>
    <Operation>GenerateAccessToken</Operation>
    <ExpiresIn>30000</ExpiresIn>
    <!-- 30 minutes -->
    <RefreshTokenExpiresIn>60000</RefreshTokenExpiresIn>
    <!-- 8 hours -->
    <SupportedGrantTypes>
        <GrantType>password</GrantType>
    </SupportedGrantTypes>
    <GrantType>request.queryparam.grant_type</GrantType>
    <UserName>request.queryparam.username</UserName>
    <PassWord>request.queryparam.password</PassWord>
    <GenerateResponse enabled="true"/>
</OAuthV2>